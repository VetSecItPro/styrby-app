{
  "name": "styrby-cli",
  "version": "0.1.0",
  "description": "Mobile remote control for AI coding agents. Control Claude Code, Codex, Gemini, and OpenCode from your phone.",
  "author": {
    "name": "Steel Motion LLC",
    "email": "security@steelmotionllc.com",
    "url": "https://steelmotionllc.com"
  },
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "bin": {
    "styrby": "./dist/index.js"
  },
  "main": "./dist/lib.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/lib.js"
    },
    "./cli": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "SECURITY.md"
  ],
  "keywords": [
    "ai",
    "coding",
    "assistant",
    "claude",
    "codex",
    "gemini",
    "opencode",
    "aider",
    "mobile",
    "remote",
    "cli",
    "terminal",
    "vibe-coding",
    "pair-programming",
    "anthropic",
    "openai",
    "google"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VetSecItPro/styrby-app.git",
    "directory": "packages/styrby-cli"
  },
  "homepage": "https://styrbyapp.com",
  "bugs": {
    "url": "https://github.com/VetSecItPro/styrby-app/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://styrbyapp.com/pricing"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "node scripts/build.mjs",
    "build:types": "tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "audit": "npm audit --audit-level=high",
    "prepublishOnly": "npm run audit && npm run typecheck && npm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "chalk": "^5.6.2",
    "open": "^11.0.0",
    "qrcode-terminal": "^0.12.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@agentclientprotocol/sdk": "^0.8.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@stablelib/base64": "^2.0.1",
    "@stablelib/hex": "^2.0.1",
    "@types/cross-spawn": "^6.0.6",
    "@types/http-proxy": "^1.17.17",
    "@types/node": "~22.15.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^19.2.7",
    "@types/tmp": "^0.2.6",
    "@vitest/coverage-v8": "4.0.18",
    "axios": "^1.13.4",
    "cross-spawn": "^7.0.6",
    "esbuild": "^0.27.2",
    "http-proxy": "^1.18.1",
    "ink": "^6.5.1",
    "react": "^19.2.0",
    "tmp": "^0.2.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "tweetnacl": "^1.0.3",
    "typescript": "5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
